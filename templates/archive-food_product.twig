{% extends "base.twig" %}

{% block content %}
  <div id="food-menu" class="container section">
      {% if posts.count > 0 %}
      {% for post in posts %}
        <div class="food-menu__item" style="background-image: url('{{ Image(post.food_image).src }}')">
          <h3 class="food-menu__item-title">
            {{ post.title }}
          </h3>
        </div>
      {% endfor %}
      {% else %}
      <div class="row">
          <h2 class="text-center">There are no products in here.</h2>
      </div>
      {% endif %}
  </div>
{% endblock %}