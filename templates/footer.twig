{% if function('is_front_page') %}
<section id="blog" class="section">
  <h4 class="site_sub-headline centered">{{ blog_sub_headline }}</h4>
		<h2 class="site_headline centered">
			{{ blog_headline }}
		</h2>
  <div class="container mt-3">
    <div class="row">
      {% for post in posts %}
      <div class="col-lg-6 blog-item">
        <div class="row">
          {% if post.thumbnail.src %}
          <div class="col-sm-4 blog-container-image">
            <div class="blog-image" style="background-image: url('{{ post.thumbnail.src }}');"></div>
          </div>
          {% endif %}
          <div class="{{ post.thumbnail.src ? 'col-sm-8' : 'col-sm-12'}} blog-content">
            <span class="date">{{ post.date | date('M j, Y') }}</span>
            <h3 class="title">{{ post.title }}</h3>
            <p class="content">{{ post.preview.length(15).read_more('<div>Read More &rsaquo;</div>') }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<footer id="site-footer" style="background-image: url('{{ footer_bg | e('esc_url') | relative }}')">

  <div class="footer-top">
    <div class="container">
      <div class="row footer-top__main">
        <div class="footer-top__main__container col-lg-4 col-md-12">
          <div class="footer-top__main__info .col-auto">
            <img class="footer__logo" src="{{ theme.link | e("esc_url") | relative }}/static/images/logo-icon.png">
            <p>The Queen of Chicken Wings in Cavite</p>
            <ul>
              <li><i class="fa fas fa-map-marker-alt mr-2"></i> 24 Sotto St., General Trias, Cavite</li>
              <li><i class="fa fas fa-envelope mr-2"></i>ordernow@titaaurings.com.ph</li>
              <li><i class="fa fas fa-phone mr-2"></i>(+63) 905 669 5251</li>
              <li><i class="fa fab fa-facebook-messenger mr-2"></i>m.me/titaaurings</li>
            </ul>
            </div>
        </div>
        <div class="col-auto">
          <div class="row footer_dynamic-sidebar">
            {{ dynamic_sidebar }}
          </div>
        </div>
        <div class="col-md-5">
          <h3 class="footer_links__title">
            Location Map
          </h3>
          <div id="map"></div>
          <a class="footer_get-directions" href="#">Get Directions</a>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid footer-bottom">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-auto site-copyright">
          Copyright &copy; {{ now | date('Y') }} Tita Auring's. All Rights Reserved
        </div>
        <div class="col-auto redkite">
          Powered by: <a class="footer_link" href="https://www.redkite.com.ph" target="_blank" rel="nofollow">Redkite</a>
        </div>
      </div>
    </div>
  </div>

</footer>